@model IEnumerable<ProjZes.Models.ApplicationUser>

@using ProjZes.Common

@{
    ViewBag.Title = Constants.Users;
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink(Constants.RegisterEmployee, "RegisterEmployee", "Account")
</p>
<table class="table">
    <tr>
        <th>
            @Constants.FirstName
        </th>
        <th>
            @Constants.LastName
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Constants.PhoneNumber
        </th>
        <th>
            @Constants.Address
        </th>
        <th>
            @Constants.Points
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Points)
        </td>
        <td>
            @Html.ActionLink(Constants.EditData, "Edit", new { id=item.Id }) |
            @Html.ActionLink(Constants.SeeData, "Details", new { id=item.Id }) |
            @Html.ActionLink(Constants.Delete, "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
